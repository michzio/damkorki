{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "lib": [ "es2016", "dom" ],
    "types": [ "node" ]
  },
  "include": [
    "Client"
  ],
  "exclude": [ "bin", "node_modules" ],
  "atom": { "rewriteTsconfig": false }
}